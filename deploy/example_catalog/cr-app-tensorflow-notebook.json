{
    "apiVersion": "kubedirector.hpe.com/v1beta1",
    "kind": "KubeDirectorApp",
    "metadata": {
        "name" : "jupyter-notebook"
    },

    "spec" : {
        "systemdRequired": true,
        "config": {
            "roleServices": [
                {
                    "serviceIDs": [
                        "ssh",
                        "jupyter-nb"
                    ],
                    "roleID": "controller"
                },
                {
                    "serviceIDs": [
                        "ssh"
                    ],
                    "roleID": "worker"
                }
            ],
            "selectedRoles": [
                "controller",
                "worker"
            ]
        },
        "label": {
            "name": "Tensorflow distributed 1.9 on CPU with jupyter notebook & centos7x",
            "description": "TensorFlow1.9 CPU with centos7x"
        },
        "distroID": "bluedata/jupyter-notebook",
        "version": "1.8",
        "configSchemaVersion": 7,
        "services": [
            {
                "endpoint": {
                    "port": 22,
                    "isDashboard": false
                },
                "id": "ssh",
                "label": {
                    "name": "SSH"
                }
            },
            {
                "endpoint": {
                    "urlScheme": "http",
                    "path": "/",
                    "isDashboard": true,
                    "port": 8888
                },
                "id": "jupyter-nb",
                "label": {
                    "name": "Jupyter Notebook"
                }
            }
        ],
        "defaultConfigPackage": {
            "packageURL" : "http://16.143.21.22/thirdparty/k8sapps/notebook/appconfig-1.8.tgz"
        },
        "roles": [
            {
                "imageRepoTag": "docker.io/rsupekar/kd-notebook:latest",
                "cardinality": "1",
                "id": "controller"
            },
            {
                "imageRepoTag": "docker.io/rsupekar/kd-notebook:latest",
                "cardinality": "0+",
                "id": "worker"
            }
        ]
    }
}
