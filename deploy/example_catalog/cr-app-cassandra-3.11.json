{
    "apiVersion": "kubedirector.bluedata.io/v1alpha1",
    "kind": "KubeDirectorApp",
    "metadata": {
        "name" : "cassandra311"
    },

    "spec" : {
        "systemdRequired" : true,
        "defaultPersistDirs" : ["/usr", "/opt", "/var", "/data"],
        "capabilities" : [
            "SYS_RESOURCE",
            "IPC_LOCK"
        ],
        "config": {
            "configMeta": {},
            "roleServices": [
                {
                    "serviceIDs": [
                        "ssh",
                        "cassandra"
                    ],
                    "roleID": "seed"
                },
                {
                    "serviceIDs": [
                        "ssh",
                        "cassandra"
                    ],
                    "roleID": "worker"
                }
            ],
            "selectedRoles": [
                "seed",
                "worker"
            ]
        },
        "defaultImageRepoTag": "docker.io/bluedata/cassandra:3.0",
        "label": {
            "name": "Cassandra 3.11",
            "description": "Cassandra 3.11 on centos 7.x"
        },
        "distroID": "bluedata/cassandra311",
        "version": "3.1",
        "configSchemaVersion": 7,
        "services": [
            {
                "endpoint": {
                    "port": 22,
                    "isDashboard": false
                },
                "id": "ssh",
                "label": {
                    "name": "SSH"
                }
            },
            {
                "endpoint": {
                    "urlScheme": "cql",
                    "isDashboard": false,
                    "port": 9042
                },
                "id": "cassandra",
                "label": {
                    "name": "cql"
                }
            }
        ],
        "defaultConfigPackage": {
            "packageURL": "https://s3.amazonaws.com/bluek8s/kubedirector/cassandra311/appconfig-3.1.tgz"
        },
        "roles": [
            {
                "cardinality": "2+",
                "id": "seed"
            },
            {
                "cardinality": "0+",
                "id": "worker"
            }
        ]
    }
}
